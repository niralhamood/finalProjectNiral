<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup">

    <TextView
        android:id="@+id/WB"
        android:layout_width="129dp"
        android:layout_height="42dp"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="70dp"
        android:text="welcome back!"
        android:textAlignment="inherit"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/edUsername2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edUsername2"
        android:layout_width="290dp"
        android:layout_height="74dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="34dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/Pw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/UserName"
        app:layout_constraintTop_toBottomOf="@+id/WB"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edPassW"
        android:layout_width="295dp"
        android:layout_height="64dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="7dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Pw"
        app:layout_constraintTop_toBottomOf="@+id/edUsername2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/UserName"
        android:layout_width="93dp"
        android:layout_height="33dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="12dp"
        android:text="User name"
        android:textAlignment="textEnd"
        android:textStyle="normal"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/edUsername2"
        app:layout_constraintEnd_toStartOf="@+id/edUsername2"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Pw"
        android:layout_width="88dp"
        android:layout_height="27dp"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="32dp"
        android:text="password"
        android:textStyle="normal"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/SignUp"
        app:layout_constraintEnd_toStartOf="@+id/edPassW"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edUsername2"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/SignUp"
        android:layout_width="148dp"
        android:layout_height="49dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="71dp"
        android:backgroundTint="#FFE0E0"
        android:text="Sign Up"
        android:textColor="#000"
        android:textColorLink="#E2A5BA"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintStart_toEndOf="@+id/Pw"
        app:layout_constraintTop_toBottomOf="@+id/Pw"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="200dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="317dp"
        android:text="I already have an account?-->"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/signIn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignUp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/signIn"
        android:layout_width="157dp"
        android:layout_height="52dp"
        android:layout_marginEnd="47dp"
        android:backgroundTint="#FFE0E0"
        android:text="Sign In"
        android:textColor="#000"
        android:textColorLink="#E99BB5"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7F8"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City Inspired"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginTop="30dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A Boost of\nMotivation, Delivered."
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="center"
            android:layout_marginTop="12dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activating this mode will send periodic uplifting messages to help you stay positive throughout your day."
            android:textSize="14sp"
            android:textColor="#666"
            android:gravity="center"
            android:layout_marginTop="18dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp" />

        <!-- MODE SELECTION TITLE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Message Mode"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginTop="40dp" />

        <!-- RADIO GROUP -->
        <RadioGroup
            android:id="@+id/modeRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:padding="10dp">

            <RadioButton
                android:id="@+id/rbMotivational"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Motivational"
                android:textSize="16sp"
                android:textColor="#444" />

            <RadioButton
                android:id="@+id/rbGuiltDriven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guilt Drive"
                android:textSize="16sp"
                android:textColor="#444"
                android:layout_marginTop="6dp" />
        </RadioGroup>

        <!-- Start Button -->
        <Button
            android:id="@+id/btnStart"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:backgroundTint="#FF8FA8"
            android:text="Start"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/rounded_button" />

        <!-- Status -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Inactive"
            android:textSize="14sp"
            android:textColor="#555"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</ScrollView>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8F8"
    android:padding="16dp">

    <!-- شريط علوي -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/titleHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"/>

        <ImageView
            android:id="@+id/settingsIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_settings"
            android:contentDescription="settings"/>
    </RelativeLayout>

    <!-- نص الترحيب (يتغير حسب الوقت + اسم المستخدم) -->
    <TextView
        android:id="@+id/greetingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Good Morning, User"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="#1E1E1E"
        android:paddingTop="8dp"/>

    <TextView
        android:id="@+id/subGreetingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready to conquer your day?"
        android:textSize="14sp"
        android:textColor="#666666"
        android:paddingBottom="16dp"/>

    <!-- بطاقات الأقسام -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:dividerPadding="8dp"
            android:showDividers="middle">

            <!-- البطاقة الأولى -->
            <LinearLayout
                android:id="@+id/cardSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_bg"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_schedule"
                    android:contentDescription="schedule"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:text="Smart Schedule"
                        android:textColor="#A86C6C"
                        android:textSize="12sp"/>

                    <TextView
                        android:text="Plan your day"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <TextView
                        android:text="Optimize your study time."
                        android:textSize="13sp"
                        android:textColor="#666666"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    android:contentDescription="next"/>
            </LinearLayout>

            <!-- البطاقة الثانية -->
            <LinearLayout
                android:id="@+id/cardRevision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_bg"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_revision"
                    android:contentDescription="revision"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:text="Revision"
                        android:textColor="#A86C6C"
                        android:textSize="12sp"/>

                    <TextView
                        android:text="Review your notes"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <TextView
                        android:text="Efficiently revise materials."
                        android:textSize="13sp"
                        android:textColor="#666666"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    android:contentDescription="next"/>
            </LinearLayout>

            <!-- البطاقة الثالثة -->
            <LinearLayout
                android:id="@+id/cardMotivation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_bg"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_motivation"
                    android:contentDescription="motivation"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:text="Motivation Hub"
                        android:textColor="#A86C6C"
                        android:textSize="12sp"/>

                    <TextView
                        android:text="Stay inspired"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <TextView
                        android:text="Boost your motivation."
                        android:textSize="13sp"
                        android:textColor="#666666"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    android:contentDescription="next"/>
            </LinearLayout>

            <!-- البطاقة الرابعة -->
            <LinearLayout
                android:id="@+id/cardAI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_bg"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_chat"
                    android:contentDescription="AI chat"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:text="AI Mental Assistant"
                        android:textColor="#A86C6C"
                        android:textSize="12sp"/>

                    <TextView
                        android:text="Chat with your AI"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <TextView
                        android:text="Get personalized support."
                        android:textSize="13sp"
                        android:textColor="#666666"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    android:contentDescription="next"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- شريط التنقل السفلي -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:weightSum="5"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home_active"/>
            <TextView
                android:text="Home"
                android:textSize="12sp"
                android:textColor="#FF7B7B"/>
        </LinearLayout>

        <!-- باقي الأزرار (Schedule, Focus, Revision, Motivation) ممكن أضيفهم إذا بدك -->
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signin">

    <TextView
        android:id="@+id/SignInn"
        android:layout_width="80dp"
        android:layout_height="33dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="36dp"
        android:text="Sign In"
        app:autoSizeTextType="uniform"
        app:layout_constraintStart_toStartOf="@+id/etUserNmaeEmail"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/etUserNmaeEmail"
        android:layout_width="283dp"
        android:layout_height="67dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="4dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Un2"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="275dp"
        android:layout_height="0dp"
        android:layout_marginTop="275dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="69dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/Enter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Pw2"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Un2"
        android:layout_width="92dp"
        android:layout_height="38dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="7dp"
        android:text="User Name"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/etUserNmaeEmail"
        app:layout_constraintEnd_toStartOf="@+id/etUserNmaeEmail"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Pw2"
        android:layout_width="98dp"
        android:layout_height="30dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="2dp"
        android:text="Password"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/etPassword"
        app:layout_constraintEnd_toStartOf="@+id/etPassword"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/Enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="253dp"
        android:backgroundTint="#FFE0E0"
        android:text="Enter"

        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/forgetyourpw"
        app:layout_constraintStart_toStartOf="@+id/forgetyourpw"
        app:layout_constraintTop_toBottomOf="@+id/etPassword"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/forgetyourpw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFE0E0"
        android:text="Forgot your password?"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Enter"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>